# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database - Neo4j
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=knowledge-graph-pass

# Database - PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=knowledge_graph
POSTGRES_USER=kg_user
POSTGRES_PASSWORD=kg_secure_pass

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# LLM Configuration
DEFAULT_LLM_PROVIDER=anthropic

# Task-specific LLM providers
TAGGING_LLM_PROVIDER=anthropic
TAGGING_LLM_MODEL=claude-3-haiku-20240307
CONNECTION_LLM_PROVIDER=anthropic
CONNECTION_LLM_MODEL=claude-3-5-sonnet-20241022
INSIGHT_LLM_PROVIDER=anthropic
INSIGHT_LLM_MODEL=claude-3-5-sonnet-20241022

# Embedding model (for semantic search)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Ollama (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Privacy Settings
USE_LOCAL_LLM_FOR_SENSITIVE=true
SENSITIVE_TAGS=personal,anxiety,therapy,procurement-contract,confidential,private

# Encryption (generate a secure key)
# ENCRYPTION_KEY=

# Standard Notes Integration
# STANDARD_NOTES_URL=https://your-standard-notes-server.com
# STANDARD_NOTES_EMAIL=your_email@example.com
# STANDARD_NOTES_PASSWORD=your_password

# Paperless-ngx Integration
# PAPERLESS_URL=https://your-paperless-instance.com
# PAPERLESS_TOKEN=your_paperless_api_token

# Email Integration
# EMAIL_IMAP_SERVER=imap.gmail.com
# EMAIL_IMAP_PORT=993
# EMAIL_USERNAME=your_email@example.com
# EMAIL_PASSWORD=your_app_password

# Todoist Integration
# TODOIST_API_KEY=your_todoist_api_key

# Background Processing
BACKGROUND_SYNC_INTERVAL=300
CONNECTION_DISCOVERY_INTERVAL=3600

# File Processing
MAX_FILE_SIZE=52428800
ALLOWED_EXTENSIONS=.md,.txt,.pdf,.docx,.html,.json

# Search Settings
SEMANTIC_SEARCH_THRESHOLD=0.7
MAX_SEARCH_RESULTS=50

# Graph Settings
MAX_GRAPH_DEPTH=3
MIN_CONNECTION_STRENGTH=0.5
